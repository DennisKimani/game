{{#if updateGameForm}}
<h2>Update</h2>
<div>
  <form>
    <div class="form-group">
      <label for="name">Name: </label>
      {{input value=name id="name" placeholder=game.name}}
    </div>
    <div class="form-group">
      <label for="about">About: </label>
      {{input value=about id="about" placeholder=game.about}}
    </div>
    <div class="form-group">
      <label for="age"> Age: </label>
      {{input value=age id="age" placeholder=game.age}}
    </div>
    <div class="form-group">
      <label for="image">Image URL: </label>
      {{input value=image id="image" placeholder=game.image}}
    </div>
    <button {{action 'updateGameForm'}}>Update</button>
  </form>
</div>
    {{/if}}
